
    {
      "emulators": {
        "auth": {
          "port": 9099,
          "host": "0.0.0.0" // Listen on all interfaces within Docker
        },
        "firestore": {
          "port": 8080,
          "host": "0.0.0.0"
        },
        "functions": {
          "port": 5001,
          "host": "0.0.0.0"
        },
        "storage": {
           "port": 9199,
           "host": "0.0.0.0"
        },
        "ui": {
          "enabled": true, // Enable Emulator UI
          "port": 4000,    // Default UI port
          "host": "0.0.0.0"
        }
      },
      "firestore": {
        "rules": "firestore.rules"
      },
      "functions": [
        {
          "source": "functions",
          "codebase": "default",
          "ignore": [
            "node_modules",
            ".git",
            "firebase-debug.log",
            "firebase-debug.*.log"
          ],
          "predeploy": [
            "npm --prefix "$RESOURCE_DIR" run lint",
            "npm --prefix "$RESOURCE_DIR" run build" // If using TS for functions
          ]
        }
      ],
      "storage": {
        "rules": "storage.rules" // Add if needed
      }
    }
    